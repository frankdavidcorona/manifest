<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="pixel-caf"
          fetch="https://github.com/PixelExperience"
          revision="pie-caf" />

  <!-- replace system/sepolicy -->
  <remove-project name="system_sepolicy" />
  <project name="frankdavidcorona/system_sepolicy" path="system/sepolicy" revision="ten" remote="github" />

  <!-- replace build/make -->
  <remove-project name="build" />
  <project name="frankdavidcorona/build" path="build/make" revision="ten" remote="github" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <!-- Some qcom-caf stuff taken from Pixel Experience-->
  <remove-project name="hardware_qcom-caf_sm8150_media" />
  <project name="hardware_qcom_media-caf_sm8150" path="hardware/qcom-caf/sm8150/media" remote="pixel-caf" />

  <!-- Device trees and kernel -->
  <project name="frankdavidcorona/android_device_xiaomi_laurel_sprout" path="device/xiaomi/laurel_sprout" remote="github" revision="staging" />
  <project name="frankdavidcorona/android_vendor_xiaomi_laurel_sprout" path="vendor/xiaomi/laurel_sprout" remote="github" revision="master" />
  <project name="frankdavidcorona/bit_kernel_xiaomi_laurel_sprout" path="kernel/xiaomi/laurel_sprout" remote="github" revision="master" />

  <!-- MIUI Camera -->
  <project name="frankdavidcorona/vendor_MiuiCamera" path="vendor/MiuiCamera" remote="github" revision="ten-anx"/>

</manifest>
